# Test Environment Configuration
# Copy this file to .env.test and adjust values as needed

# Test Database Configuration
TEST_POSTGRES_DB=abparts_test
TEST_POSTGRES_USER=abparts_test_user
TEST_POSTGRES_PASSWORD=abparts_test_pass

# Test Redis Configuration (uses database 1 instead of 0)
TEST_REDIS_URL=redis://redis:6379/1

# Test Environment Settings
ENVIRONMENT=testing
TESTING=true

# Test JWT Settings
TEST_SECRET_KEY=test-secret-key-for-testing-only
TEST_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Test Email Settings (for testing email functionality)
TEST_SMTP_SERVER=smtp.example.com
TEST_SMTP_PORT=587
TEST_SMTP_USERNAME=test@example.com
TEST_SMTP_PASSWORD=test_password
TEST_FROM_EMAIL=test@abparts.com

# Test Base URL
TEST_BASE_URL=http://localhost:8000

# Coverage Settings
COVERAGE_FAIL_UNDER=80
COVERAGE_REPORT_DIR=htmlcov